{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "zone.js",
      "@types/chai",
      "@types/meteor",
      "@types/underscore"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
